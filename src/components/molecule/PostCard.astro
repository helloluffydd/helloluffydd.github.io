---
import { IFrontmatter } from '@/type';

export interface Props {
  frontmatter: IFrontmatter;
  coverImgSrc: string;
  url: string;
}

const { frontmatter, url, coverImgSrc } = Astro.props;
---

<a href={url}>
  <div
    class="h-full border border-solid border-neutral-900 overflow-hidden rounded-md dark:border-slate-200"
  >
    {frontmatter.coverImgSrc}
    <div>
      <img
        class="w-full h-56 object-cover object-center"
        src={coverImgSrc}
        alt={frontmatter.coverImgAlt}
        loading="lazy"
      />
    </div>
    <div class="px-3 pt-4 pb-6 text-center">
      <h2 class="text-xl font-semibold">{frontmatter.title}</h2>
      <div class="mt-1 text-xs text-gray-400">{frontmatter.publicDate}</div>
      <div class="mt-2 text-sm">{frontmatter.description}</div>
    </div>
  </div>
</a>
